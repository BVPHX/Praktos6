<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Praktos6.StopWatch" Title="Секундомер">
    <ContentPage.Content>
        <StackLayout>
            <TimePicker x:Name="timePicker" Format="HH mm ss"></TimePicker>
            <Button x:Name="startWatch" Text="Запуск" Clicked="startWatch_Clicked"></Button>
            <Button x:Name="stopWatch"  Text="Остановить" Clicked="stopWatch_Clicked"></Button>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>