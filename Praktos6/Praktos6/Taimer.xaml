<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Praktos6.Taimer" Title="Таймер">
    <ContentPage.Content>
        <StackLayout>
            <TimePicker x:Name="timePicker" Format="HH mm ss"/>
            <Button x:Name="timerButton" Text="Zapusk" Clicked="StartTimer"></Button>
            <Button x:Name="stopButton" Text="Restart" Clicked="RestartTimer"></Button>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>